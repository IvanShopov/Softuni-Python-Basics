product = input()
city = input()
quantity = float(input())
price = 0
if product == 'coffee' :
    if city == 'Sofia' :
        price = 0.50
    if city == 'Plovdiv' :
        price = 0.4
    if city == 'Varna':
        price = 0.45
elif product == 'water':
    if city == 'Sofia':
        price = 0.8
    if city == 'Plovdiv':
        price = 0.7
    if city == 'Varna':
        price = 0.7
elif product == 'beer' :
    if city == 'Sofia':
        price = 1.20
    if city == 'Plovdiv':
        price = 1.15
    if city == 'Varna':
        price = 1.10
elif product == 'sweets' :
    if city == 'Sofia':
        price = 1.45
    if city == 'Plovdiv':
        price = 1.30
    if city == 'Varna':
        price = 1.35
elif product == 'peanuts' :
    if city == 'Sofia':
        price = 1.60
    if city == 'Plovdiv':
        price = 1.50
    if city == 'Varna':
        price = 1.55
price *= quantity
print(price)
